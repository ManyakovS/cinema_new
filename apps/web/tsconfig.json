{
  "extends": "tsconfig/tsconfig.vue.json",
  "compilerOptions": {
    "baseUrl": "./",
    "allowJs": true,
    "useUnknownInCatchVariables": true,
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": false,
    "ignoreDeprecations": "5.0",
    "noEmitOnError": false,  // Продолжает компиляцию, даже если есть ошибки
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["vite-plugin-pwa/client"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "exclude": ["src/prompt-sw.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
